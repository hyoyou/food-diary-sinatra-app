<link href="https://fonts.googleapis.com/css?family=Open+Sans|Pacifico" rel="stylesheet">

<h2>Welcome, <%= @user.email %></h2>

<h5><a href="/logs">Back to Logs</a></h5>
<br><br>

<%= flash[:notice] %>
<br><br>

<h3>A list of your recent meals:</h3>
<% Meal.all.each do |meal| %>
  <% if @user.meals.include?(meal) %>
    <ul>
      <li>Name: <a href="/meals/<%= meal.id %>"><%= meal.name %></a></li>
      <li>Calories: <%= meal.calories %></li>
      <br>
    </ul>
  <% end %>
<% end %>
<br>

<form action="/meals/new" method="GET">
  <input type="submit" value="Add New Meal">
</form>

<form align="right" action='/logout' name="logout" method="GET">
  <label class="logoutLblPos">
  <input name="submit2" type="submit" id="submit2" value="Log Out">
  </label>
</form>
