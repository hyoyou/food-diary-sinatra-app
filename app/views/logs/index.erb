<link href="https://fonts.googleapis.com/css?family=Open+Sans|Pacifico" rel="stylesheet">

<h2>Welcome, <%= current_user.email %></h2>

<%= flash[:notice] %>
<br><br>

<h3>A list of your recent logs:</h3>

<% current_user.logs.each do |log| %>
  <ul>
    <li><a href="/logs/<%= log.id %>"><%= log.date %></a></li>
    <br>
  </ul>
<% end %>
<br>

<form action="/logs/new" method="GET">
  <input type="submit" value="Add New Log">
</form>

<form align="right" action='/logout' name="logout" method="GET">
  <label class="logoutLblPos">
  <input name="submit2" type="submit" id="submit2" value="Log Out">
  </label>
</form>
